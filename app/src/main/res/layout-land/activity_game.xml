<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ryanjoshsean.kingofmountoliver.GameActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/greensmile" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/greensmile"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/diceImage2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/greensmile"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/greensmile"
        android:layout_below="@+id/diceImage3"
        android:layout_toEndOf="@+id/finishRollButton"
        android:layout_marginStart="35dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/greensmile"
        android:layout_below="@+id/diceImage5"
        android:layout_alignStart="@+id/diceImage5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/greensmile"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diceImage1"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="false"
        android:layout_marginTop="37dp"
        android:src="@drawable/attack" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diceImage2"
        android:src="@drawable/mojo"
        android:layout_above="@+id/diceImage1"
        android:layout_alignStart="@+id/finishRollButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diceImage3"
        android:src="@drawable/energy"
        android:layout_above="@+id/diceImage1"
        android:layout_alignEnd="@+id/rollButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diceImage4"
        android:src="@drawable/one"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diceImage5"
        android:src="@drawable/two"
        android:layout_alignTop="@+id/diceImage4"
        android:layout_alignStart="@+id/diceImage2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diceImage6"
        android:src="@drawable/three"
        android:layout_alignTop="@+id/diceImage5"
        android:layout_alignStart="@+id/imageView6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll"
        android:id="@+id/rollButton"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/diceImage4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Roll"
        android:id="@+id/finishRollButton"
        android:layout_alignTop="@+id/rollButton"
        android:layout_toStartOf="@+id/diceImage6" />
</RelativeLayout>
